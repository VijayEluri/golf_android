<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/background"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:paddingTop="5dip"
		android:paddingLeft="5dip"
		android:paddingRight="5dip">
		<TextView
			android:id="@+id/card_match"
			android:padding="7dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="@color/colortext_title"
			android:textSize="14.5sp"
			android:background="@color/background_title"
			android:text="-- Partido --" />
		<TextView
			android:layout_height="5dip"
			android:layout_width="fill_parent"
			android:text=" " />
		<TextView
			android:id="@+id/hole_info"
			android:padding="5dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:textSize="12.5sp"
			android:background="#FFFFFF"
			android:text="Hoyo 3:\nPar : 5     Handicap :18\nLong : (R) 5879  (A) 6378" />
		<TableLayout
			android:padding="7dip"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:stretchColumns="0,1"
			android:gravity="center_vertical">
			<TextView 
				android:id="@+id/label_players"
				android:text="Jugadores :  "
				android:paddingTop="10dip"/>
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">
				<Button
					android:id="@+id/strokesButton_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
				<Button
					android:id="@+id/strokesButton_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
			</TableRow>
			<TableRow>
				<Button
					android:id="@+id/strokesButton_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
				<Button
					android:id="@+id/strokesButton_4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
			</TableRow>
		</TableLayout>
		<TableLayout
			android:padding="10dip"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:stretchColumns="0,1">
			<TextView
				android:layout_height="7dip"
				android:layout_width="fill_parent"
				android:text="\n\n" />
			<TableRow>
				<Button
					android:id="@+id/strokes_previous"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Anterior" />
				<Button
					android:id="@+id/strokes_next"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Siguiente" />
			</TableRow>
		</TableLayout>
	</LinearLayout>		
</ScrollView>
