<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
   	android:padding="5dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">
	<TableLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:stretchColumns="1">
		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<TextView android:id="@+id/label_course"
				android:text="Campo :  "
				android:paddingTop="15dip"/>
			<AutoCompleteTextView android:id="@+id/newmatch_course"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:completionThreshold="3"
				android:layout_span="2"/>	
		</TableRow>
		<TableRow>
			<TextView android:id="@+id/label_datehour"
				android:text="Fecha/Hora :  "
				android:paddingTop="15dip"/>
			<EditText
				android:id="@+id/newmatch_datehour"
				android:singleLine="true"
				android:textSize="12.5sp"
				android:layout_height="42.5sp"
				android:layout_span="2"/>
		</TableRow>
		<TableRow>
			<TextView android:id="@+id/label_holes"
				android:text="Hoyos :  "
				android:paddingTop="15dip"/>
			<EditText
				android:id="@+id/newmatch_holes"
				android:singleLine="true"
				android:textSize="12.5sp"
				android:layout_height="42.5sp"
				android:width="20px"
				android:maxWidth="25sp"
				android:numeric="integer"/>
		</TableRow>
		<TextView android:id="@+id/label_players"
				android:text="Jugadores :  "
				android:paddingTop="15dip"/>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="15dip"
			android:rowHeight="15dip">
			<AutoCompleteTextView android:id="@+id/newmatch_player_1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:completionThreshold="3"
				android:layout_span="2"
				android:popupBackground="#FFFFFF"
				android:textColor="#1D5C2A"/>
			<Spinner android:id="@+id/newmatch_tee_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="false"/>
		</TableRow>
		<TableRow>
			<AutoCompleteTextView android:id="@+id/newmatch_player_2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:completionThreshold="3"
				android:layout_span="2"
				android:popupBackground="#FF0000"/>
			<Spinner android:id="@+id/newmatch_tee_2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<AutoCompleteTextView android:id="@+id/newmatch_player_3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:completionThreshold="3"
				android:layout_span="2"
				android:popupBackground="#FF0000"/>
			<Spinner android:id="@+id/newmatch_tee_3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<AutoCompleteTextView android:id="@+id/newmatch_player_4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:completionThreshold="3"
				android:layout_span="2"
				android:popupBackground="#FF0000"/>
			<Spinner android:id="@+id/newmatch_tee_4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<Button
				android:id="@+id/newmatch_ok"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Continuar" />
			<Button
				android:id="@+id/newmatch_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cancel" />
		</TableRow>
	</TableLayout>
</ScrollView>
