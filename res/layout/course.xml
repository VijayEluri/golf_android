<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
   	android:padding="5dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">
    <LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:paddingTop="5dip"
		android:paddingLeft="5dip"
		android:paddingRight="5dip">
		<TextView
			android:id="@+id/course_name"
			android:padding="7dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="@color/colortext_title"
			android:textSize="14.5sp"
			android:background="@color/background_title" 
			android:hint="Nombre del Campo" />
		<TextView
			android:layout_height="5dip"
			android:layout_width="fill_parent"
			android:text=" " />
		<TextView
			android:id="@+id/course_address"
			android:padding="7dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:textSize="14.5sp"
			android:background="#FFFFFF" 
			android:hint="Dirección del Campo" />
		<TextView
			android:layout_height="5dip"
			android:layout_width="fill_parent"
			android:text=" " />
		<TextView
			android:id="@+id/course_description"
			android:padding="7dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:textSize="14.5sp"
			android:background="#FFFFFF" 
			android:hint="Descripción del Campo" />
		<TextView
			android:layout_height="5dip"
			android:layout_width="fill_parent"
			android:text=" " />
		<TextView
			android:id="@+id/course_config"
			android:padding="7dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="#000000"
			android:textSize="14.5sp"
			android:background="#FFFFFF" 
			android:hint="Datos adicionales del Campo" />
		<TextView
			android:layout_height="5dip"
			android:layout_width="fill_parent"
			android:text=" " />
	</LinearLayout>
</ScrollView>
