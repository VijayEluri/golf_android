				<Button
					android:id="@+id/card_hole5"
					android:textSize="16dip"
					android:text="Hoyo 5"
					android:gravity="center">
				</Button>
				<Button
					android:id="@+id/card_hole6"
					android:textSize="16dip"
					android:text="Hoyo 6"
					android:gravity="center">
				</Button>
			</TableRow>
			<TableRow>
