<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/background"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:paddingTop="3dip"
		android:paddingLeft="3dip"
		android:paddingRight="3dip">
		<TextView
			android:id="@+id/card_match"
			android:padding="7dip"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:textColor="@color/colortext_title"
			android:textSize="14.5sp"
			android:background="@drawable/rounded_edges"
			android:text="Club de Golf RACE\n12/07/2010 13:34" />
		<TextView
			android:layout_height="5dip"
			android:layout_width="fill_parent"
			android:text=" " />
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"
			android:gravity="center" >
			<Button
				android:id="@+id/strokes_previous"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="2"
				android:textStyle="bold"
				android:textSize="20.0sp"
				android:textColor="@color/red" 
				android:padding="20dip"
				android:gravity="center_vertical"/>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:padding="2dip"
				android:gravity="center" >
				<LinearLayout
					android:layout_height="fill_parent"
					android:layout_width="fill_parent"
					android:orientation="horizontal"
					android:background="@drawable/rounded_edges_strokes"
					android:gravity="center" >
					<ImageView
				    		android:src="@drawable/tee2"
				    		android:paddingLeft="15dip"
				    		android:paddingRight="15dip"
				    		android:layout_height="wrap_content"
				    		android:layout_width="wrap_content" />
					<TextView
						android:id="@+id/hole_info_1"
						android:padding="5dip"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:textColor="@color/red"
						android:textSize="18.0sp"
						android:textStyle="bold"
						android:paddingLeft="25dip"
						android:paddingRight="25dip"
						android:gravity="left"
						android:text="Hoyo ..." />
				</LinearLayout>
				<TextView
					android:id="@+id/hole_info_2"
					android:padding="5dip"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:textColor="#FFFFFF"
					android:textSize="14.0sp"
					android:paddingLeft="25dip"
					android:paddingRight="25dip"
					android:background="#1D5C2A"
					android:text="Par :        Handicap :      \nLong : " />
			</LinearLayout>
			<Button
				android:id="@+id/strokes_next"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="4"
				android:textStyle="bold"
				android:textSize="20.0sp"
				android:textColor="@color/red"
				android:padding="20dip" 
				android:gravity="center_vertical"/>
		</LinearLayout>
		<TableLayout
			android:padding="7dip"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:stretchColumns="0,1"
			android:gravity="center_vertical">
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">
				<Button
					android:id="@+id/strokesButton_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
				<Button
					android:id="@+id/strokesButton_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
			</TableRow>
			<TableRow>
				<Button
					android:id="@+id/strokesButton_3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
				<Button
					android:id="@+id/strokesButton_4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="---" />
			</TableRow>
		</TableLayout>
	</LinearLayout>		
</ScrollView>
